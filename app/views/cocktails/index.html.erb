<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1557149559-d74af2d38a1a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');">
  <div class="container">
    <h1 class = "banner-text text-center swing animated"><strong>COCKTAILS</strong>   <i class="fas fa-cocktail"></i></h1>

  </div>
</div>


  <div class="page-content">
    <% @cocktails.each do |cocktail| %>
      <div class="card embed-responsive" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(cocktail.photo.key, :crop => :fill) %> ')">
        <div class="content">
          <h2 class="title"><strong><%= cocktail.name %></strong></h2>
          <% if cocktail.reviews.nil? %>
             <% 5.times do  %>
                <span class="far fa-star"></span>
             <% end %>
          <% else %>
            <% cocktail.reviews.each do |review| %>
              <% @sum = 1 %>
              <% @sum += (review.stars / 5.0).round%>
            <% end %>
          <% end %>
          <p class="copy">Check out the recipe of this delicious drink</p><button class="butns"><%= link_to 'Recipe', cocktail_path(cocktail) %></button>
          <ul class="list-group">
            <div class="review mb-5 mt-3">
              <% if cocktail.reviews.nil? %>
                <% 5.times do  %>
                  <span class="far fa-star"></span>
                  <% break %>
                <% end %>
              <% else %>
              <% @sum = 1 %>
                <% @sum.times do  %>
                  <span class="fas fa-star"></span>
                <% end %>
                <% (5 - @sum).times do  %>
                  <span class="far fa-star"></span>
                <% end %>
              <% end %>
            </div>
          </ul>
        </div>
      </div>
    <% end %>

  </div>
