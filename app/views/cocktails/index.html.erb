

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1557149559-d74af2d38a1a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');">
  <div class="container">
    <h1 class = "banner-text text-center swing animated"><strong>COCKTAILS</strong></h1>
  </div>
</div>



<div class="cards mt-3 mx-3">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(cocktail.photo.key, :crop => :fill) %> ')" >
      <h2 class="card-title"><strong><%= cocktail.name %></strong></h2>
      <%= link_to 'Show', cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>


